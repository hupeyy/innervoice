{
    "name": "innervoice",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "dev": "concurrently -k -n \"🎨SVELTE,🐍PYTHON\" -c \"cyan.bold,green.bold\" \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "vite dev",
        "dev:backend": "powershell -ExecutionPolicy ByPass -File ./run_backend.ps1",
        "py:setup": "powershell -ExecutionPolicy ByPass -Command \"cd backend; .\\setup_python.ps1\"",
        "py:install": "powershell -ExecutionPolicy ByPass -Command \"cd backend; .\\venv\\Scripts\\pip.exe install -r requirements.txt\"",
        "py:clean": "powershell -ExecutionPolicy ByPass -Command \"cd backend; Remove-Item -Recurse -Force venv -ErrorAction SilentlyContinue; Write-Host 'Cleaned Python environment'\"",
        "py:freeze": "powershell -ExecutionPolicy ByPass -Command \"cd backend; .\\venv\\Scripts\\pip.exe freeze > requirements.txt\"",
        "build": "vite build",
        "preview": "vite preview"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^6.0.0",
        "@sveltejs/kit": "^2.22.0",
        "@sveltejs/vite-plugin-svelte": "^6.0.0",
        "@tailwindcss/vite": "^4.0.0",
        "concurrently": "^9.2.1",
        "prettier": "^3.4.2",
        "prettier-plugin-svelte": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "svelte": "^5.0.0",
        "tailwindcss": "^4.0.0",
        "vite": "^7.0.4"
    },
    "dependencies": {
        "crypto-js": "^4.2.0"
    }
}
